<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>

    <title>Update <%= user.profile.name %> -Online Shopper</title>
  </head>

  <body>
    <% include ../partials/navbar %>
    <div class="container">
      <div class="row">
        <div
          class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 my-form"
        >
          <%# if (errors.length) { %>
          <!--     <div class="alert alert-danger alert-dismissable">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%#= errors %> 
          </div>-->
          <%# } %>
          <form
            role="form"
            method="POST"
            action="/api/users/update-profile?_method=PUT"
          >
            <fieldset>
              <h2>
                Update Profile:
              </h2>
              <hr class="colorgraph" />
              <br />
              <img
                class="profile-imageholder"
                src="/images/profile-imageholder.png"
              />
              <div class="form-group">
                <br />
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control input-lg"
                  value="<%=user.profile.name%>"
                />
              </div>
              <div class="form-group">
                <br />
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control input-lg"
                  value="<%=user.email%>"
                />
              </div>

              <div class="form-group">
                <input
                  type="text"
                  name="address"
                  id="address"
                  class="form-control input-lg"
                  value="<%=user.address%>"
                />
              </div>

              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <input
                    type="submit"
                    class="btn btn-md btn-primary btn-block"
                    value="Update"
                  />
                </div>
              </div>
            </fieldset>
          </form>
          <hr class="colorgraph" />
          <% if (perrors.length) { %>
              <div class="alert alert-danger alert-dismissable">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= perrors %> 
          </div>
          <% } %>
          <div style="margin-top: 30px;">
            <form
           
              role="form"
              method="POST"
              action="/api/users/update-password?_method=PUT"
            >
              <h5>Change Password</h5>
              <fieldset>
                <div class="form-group">
                  <input
                    type="password"
                    name="oldPassword"
                    id="oldPassword"
                    class="form-control input-lg"
                    placeholder="Old Password"
                  />
                  <br />
                  <div class="form-group">
                    <input
                      type="password"
                      name="newPassword"
                      id="newPassword"
                      class="form-control input-lg"
                      placeholder="New Password"
                    />
                  </div>
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="repeatNewPassword"
                    id="repeatNewPassword"
                    class="form-control input-lg"
                    placeholder="Repeat New Password"
                  />
                </div>
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <input
                      type="submit"
                      class="btn btn-md btn-primary btn-block"
                      value="Update Password"
                    />
                  </div>
                </div>
              </fieldset>
            </form>
            <hr class="colorgraph" />
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer %> <% include ../partials/scripts %>
  </body>
</html>
